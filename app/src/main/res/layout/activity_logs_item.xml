<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_marginVertical="@dimen/_7sdp"
    android:layout_marginHorizontal="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_7sdp">

        <TextView
            android:id="@+id/activityLogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/company_sub_logo"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activityLogTime"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/activityLogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_sub_logo"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/activityLogTitle"
            app:layout_constraintStart_toStartOf="@+id/activityLogTitle"/>

        <TextView
            android:id="@+id/activityLogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_sub_logo"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>