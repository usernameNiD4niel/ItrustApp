<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background__"
    tools:context=".UserChatbotFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_gravity="end"
                android:layout_height="100dp"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/mainone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to_katiwala_chatbot"
                android:textColor="@color/main_color"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hi_ako_nga_pala_si_katiwala_ang_iyong_makakasama_at_makakausap_kung_kailangan_mo_ng_kasagutan_sa_iyong_problema_matutulungan_kita"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"/>

            <soup.neumorphism.NeumorphImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/starla"
                android:layout_marginTop="@dimen/_25sdp"
                style="@style/Widget.Neumorph.ImageView"/>

<!--            <ImageView-->
<!--                android:layout_width="@dimen/_200sdp"-->
<!--                android:layout_height="@dimen/_200sdp"-->
<!--                android:src="@drawable/starla"-->
<!--                android:contentDescription="@string/app_name"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="35dp"/>-->

        </LinearLayout>

<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/talkToKatiwalaBtn"-->
<!--            android:text="@string/talk_to_katiwala"-->
<!--            android:textAllCaps="false"-->
<!--            android:paddingTop="15dp"-->
<!--            android:paddingBottom="15dp"-->
