<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userchatbot.ChatBotStarlaProfile">

    <androidx.cardview.widget.CardView
        android:id="@+id/headingsCardViewChatBotStarlaProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="@dimen/_16sdp"
        app:cardBackgroundColor="@color/main_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/starla_data"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:padding="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/backButtonsUserChatBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_5sdp"
            android:contentDescription="@string/starla"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/headerLayoutChatBotStarlaProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/headingsCardViewChatBotStarlaProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            app:cardCornerRadius="@dimen/_38sdp"
            android:layout_gravity="center"
            app:cardElevation="@dimen/_5sdp"
            app:cardBackgroundColor="@color/accent_white"
            android:layout_margin="@dimen/_5sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/starla"
                android:src="@drawable/starla"/>

        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/starId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textColor="@color/main_color_300"
                android:background="@color/ngilo"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/la"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/main_color_300"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/starId"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <ImageView
                android:id="@+id/iconPhoneChatBotStarla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_starla_phone"
                app:layout_constraintStart_toStartOf="@+id/starId"
                app:layout_constraintTop_toBottomOf="@+id/starId"
                android:layout_marginVertical="@dimen/_5sdp"
                android:contentDescription="@string/starla"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/phoneNumberChatBotStarla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/_0987_654_3210"
                app:layout_constraintStart_toEndOf="@+id/iconLocationChatBotStarla"
                app:layout_constraintTop_toBottomOf="@+id/starId"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/main_color_300"/>

            <ImageView
                android:id="@+id/iconLocationChatBotStarla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_starla_address"
                android:layout_marginVertical="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="@+id/iconPhoneChatBotStarla"
                app:layout_constraintTop_toBottomOf="@+id/iconPhoneChatBotStarla"
                android:contentDescription="@string/starla"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/addressChatBotStarla"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/purok_4_itong_address_ay_sample_lamang_at_ito_y_papalitan_din"
                app:layout_constraintStart_toEndOf="@+id/iconLocationChatBotStarla"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberChatBotStarla"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/main_color_300"/>

            <ImageView
                android:id="@+id/iconEmailChatBotStarla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:layout_marginVertical="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="@+id/iconLocationChatBotStarla"
                app:layout_constraintTop_toBottomOf="@+id/addressChatBotStarla"
                android:contentDescription="@string/starla"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/barangayalawihaoofficial_gmail_com"
                app:layout_constraintStart_toEndOf="@+id/iconEmailChatBotStarla"
                app:layout_constraintTop_toBottomOf="@+id/addressChatBotStarla"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/main_color_300"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:id="@+id/horizontalLineChatBotProfile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_color"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayoutChatBotStarlaProfile"
        android:layout_marginVertical="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/bestAnswerChatBotProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/best_answers_saved"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLineChatBotProfile"
        app:layout_constraintStart_toStartOf="@+id/horizontalLineChatBotProfile"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/main_color_300"
        android:fontFamily="monospace"
        android:textSize="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_10sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChatBotProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/bestAnswerChatBotProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/noDataFoundChatBotStarlaProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_data_found"
        app:layout_constraintTop_toBottomOf="@+id/bestAnswerChatBotProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarChatBotStarlaProfile"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:indeterminateTint="@color/main_color_300"
        app:layout_constraintTop_toBottomOf="@+id/bestAnswerChatBotProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/viewDarnaMessageProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@color/main_color_300"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"

        app:tint="@color/white"
        android:src="@drawable/ic_messenger"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>