<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chat_bot_starla_profile_bg"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/nameLabelResidenceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/main_color_300"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nameTextResidenceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/main_color"
        app:layout_constraintStart_toEndOf="@+id/nameLabelResidenceItem"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="@+id/nameLabelResidenceItem"
        app:layout_constraintBottom_toBottomOf="@+id/nameLabelResidenceItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/daniel_rey"/>

    <TextView
        android:id="@+id/phoneNumberLabelResidenceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/phone_number"
        android:textColor="@color/main_color_300"
        app:layout_constraintTop_toBottomOf="@+id/nameLabelResidenceItem"
        app:layout_constraintStart_toStartOf="@+id/nameLabelResidenceItem"/>

    <TextView
        android:id="@+id/phoneNumberTextResidenceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@+id/phoneNumberLabelResidenceItem"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="@+id/phoneNumberLabelResidenceItem"
        app:layout_constraintBottom_toBottomOf="@+id/phoneNumberLabelResidenceItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_0987_654_3210"/>

    <TextView
        android:id="@+id/birthdayLabelResidenceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/birthday"
        android:textColor="@color/main_color_300"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberLabelResidenceItem"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberLabelResidenceItem"/>

    <TextView
        android:id="@+id/birthdayTextResidenceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/main_color"
        app:layout_constraintStart_toEndOf="@+id/birthdayLabelResidenceItem"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="@+id/birthdayLabelResidenceItem"
        app:layout_constraintBottom_toBottomOf="@+id/birthdayLabelResidenceItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/october_25_2000"/>

    <TextView
        android:id="@+id/purokLabelResidenceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purok"
        android:textStyle="bold"
        android:textColor="@color/main_color_300"
        app:layout_constraintTop_toBottomOf="@+id/birthdayLabelResidenceItem"
        app:layout_constraintStart_toStartOf="@+id/birthdayLabelResidenceItem"/>

    <TextView
        android:id="@+id/purokTextResidenceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@+id/purokLabelResidenceItem"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="@+id/purokLabelResidenceItem"
        app:layout_constraintBottom_toBottomOf="@+id/purokLabelResidenceItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>