<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background__"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:srcCompat="@drawable/mainone"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/mag_simula"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/our_goal_is_not_just_to_save_life_for_today"
            android:textColor="#575859"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_20sdp"/>


        <Button
            android:id="@+id/getStartedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            android:text="@string/mag_simula"
            android:textAllCaps="false"
            android:background="@drawable/normal_state_btn_rounded"
            android:layout_marginHorizontal="@dimen/_20sdp"

            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@id/textView3"
            android:layout_marginTop="40dp"/>


        <Button
            android:id="@+id/adminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="42dp"
            android:background="#00000000"
            android:textAllCaps="false"
            android:text="@string/admin"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="#4F66D8"
            app:layout_constraintTop_toBottomOf="@+id/getStartedBtn"
            app:layout_constraintStart_toStartOf="@+id/getStartedBtn"
            app:layout_constraintEnd_toEndOf="@id/getStartedBtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>