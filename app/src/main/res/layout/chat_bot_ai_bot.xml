<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chat_bot_ai_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_of_birth_10_25_2000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_chat_bot_ai"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:maxWidth="@dimen/_190sdp"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_10ssp"
        android:background="@drawable/chat_bg_for_admin"
        android:textColor="@color/white"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_chat_bot_ai"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/starla"
        android:layout_marginEnd="@dimen/_10sdp"
        app:civ_border_overlay="true"
        app:civ_border_color="@color/main_color"
        android:layout_marginStart="@dimen/_5sdp"
        app:civ_border_width="@dimen/_2sdp"
        android:elevation="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/company_sub_logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>