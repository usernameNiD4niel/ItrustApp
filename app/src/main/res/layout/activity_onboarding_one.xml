<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background__"
    tools:context=".OnboardingOne">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/mainone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/company_logo"
            android:id="@+id/company_logo_onboarding_one"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_what_video_recommendation_categories_to_watch"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/company_logo_onboarding_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:id="@+id/description_onboarding_one"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/main_color"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/description_onboarding_one"
            app:layout_constraintStart_toStartOf="@+id/description_onboarding_one"
            android:text="@string/menstruation_and_menstrual_disorders"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_15sdp"
            android:textAlignment="center"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            android:id="@+id/menstruation_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/menopause"
            android:textAllCaps="false"
            android:id="@+id/menopause_btn_onboarding"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toEndOf="@+id/menstruation_btn_onboarding"
            app:layout_constraintEnd_toEndOf="@+id/description_onboarding_one"
            app:layout_constraintTop_toTopOf="@+id/menstruation_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contraception"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/fertility_btn_onboarding"
            android:id="@+id/contraception_btn_onboarding"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fertility_and_infertility"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/fertility_btn_onboarding"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            app:layout_constraintEnd_toStartOf="@+id/postpartum_btn_onboarding"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toEndOf="@+id/contraception_btn_onboarding"
            app:layout_constraintTop_toTopOf="@+id/contraception_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/postpartum_care"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/postpartum_btn_onboarding"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toEndOf="@+id/fertility_btn_onboarding"
            app:layout_constraintTop_toTopOf="@+id/fertility_btn_onboarding"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/labor_and_delivery"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/labor_btn_onboarding"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toStartOf="@+id/contraception_btn_onboarding"
            app:layout_constraintTop_toBottomOf="@+id/contraception_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sexual_health_and_sexually_transmitted_infections"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/sexual_btn_onboarding"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toEndOf="@+id/labor_btn_onboarding"
            app:layout_constraintTop_toTopOf="@+id/labor_btn_onboarding"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reproductive_rights_and_advocacy"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/reproductive_rights_btn_onboarding"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toStartOf="@+id/labor_btn_onboarding"
            app:layout_constraintTop_toBottomOf="@+id/labor_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/gynecological_health"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/gynecological_btn_onboarding"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toEndOf="@+id/reproductive_rights_btn_onboarding"
            app:layout_constraintTop_toTopOf="@+id/reproductive_rights_btn_onboarding"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/family_planning_"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/family_planning_btn_onboarding"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toStartOf="@+id/reproductive_rights_btn_onboarding"
            app:layout_constraintTop_toBottomOf="@+id/reproductive_rights_btn_onboarding"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nutrition_and_diet_during_pregnancy"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/nutrition_btn_onboarding"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toEndOf="@+id/family_planning_btn_onboarding"
            app:layout_constraintTop_toTopOf="@+id/family_planning_btn_onboarding"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exercise_and_physical_activity_during_pregnancy"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textAllCaps="false"
            android:id="@+id/exercise_btn_onboarding"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:background="@drawable/rounded_button_bg"
            app:layout_constraintStart_toStartOf="@+id/family_planning_btn_onboarding"
            app:layout_constraintTop_toBottomOf="@+id/family_planning_btn_onboarding"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/watch_videos"
            android:id="@+id/watch_videos_onboarding"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/exercise_btn_onboarding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/normal_state_btn_rounded"
            android:textColor="@color/background__"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>