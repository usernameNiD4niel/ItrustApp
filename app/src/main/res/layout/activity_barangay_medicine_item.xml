<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicine_inventory.user.BarangayMedicineItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/back_button"
            app:tint="@color/primary__"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/back_button_barangay_medicine_item"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo_brgy_medicine_item"
            android:transitionName="medicine_name"
            android:src="@drawable/medicine"
            app:layout_constraintTop_toBottomOf="@+id/back_button_barangay_medicine_item"
            app:layout_constraintStart_toEndOf="@+id/back_button_barangay_medicine_item"
            android:layout_marginTop="@dimen/_10sdp"
            android:contentDescription="@string/back_button"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/logo_brgy_medicine_item"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:transitionName="medicine_name"
            android:text="@string/available_schedule"
            app:layout_constraintTop_toTopOf="@+id/logo_brgy_medicine_item"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/logo_brgy_medicine_item"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/primary__"
            android:id="@+id/medicine_name_brgy_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/medicine_name_brgy_item"
            app:layout_constraintStart_toStartOf="@+id/medicine_name_brgy_item"
            android:textColor="@color/primary__"
            android:transitionName="medicine_stock"
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/stock_text_bgry_item"
            android:text="@string/stock_9"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/logo_brgy_medicine_item"
            app:layout_constraintStart_toStartOf="@id/logo_brgy_medicine_item"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/description"
            android:transitionName="medicine_description"
            android:textColor="@color/primary__"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/description_text_bgry_medicine_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/description_text_bgry_medicine_item"
            app:layout_constraintStart_toStartOf="@+id/description_text_bgry_medicine_item"
            app:layout_constraintEnd_toEndOf="parent"
            android:transitionName="medicine_description"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipisicing_elit_inventore_reprehenderit_dicta_quam_eos_corrupti_sapiente_quidem_doloremque_ipsa_eius_similique_a_sed_voluptatibus_rem_numquam_aperiam_distinctio_laborum_quas_molestiae_lorem_ipsum_dolor_sit_amet_consectetur_adipisicing_elit_inventore_reprehenderit_dicta_quam_eos_corrupti_sapiente_quidem_doloremque"
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/description_text_content_bgry_medicine_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/description_text_content_bgry_medicine_item"
            app:layout_constraintTop_toBottomOf="@+id/description_text_content_bgry_medicine_item"
            app:layout_constraintEnd_toEndOf="@+id/description_text_content_bgry_medicine_item"
            android:text="@string/when_to_use"
            android:textColor="@color/primary__"
            android:textSize="@dimen/_14ssp"
            android:transitionName="medicine_description"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/wtu_bgry_medicine_item"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/wtu_bgry_medicine_item"
            app:layout_constraintStart_toStartOf="@+id/wtu_bgry_medicine_item"
            app:layout_constraintEnd_toEndOf="@+id/wtu_bgry_medicine_item"
            android:id="@+id/wtu_text_bgry_medicine_item"
            android:transitionName="medicine_description"
            android:text="@string/no_available"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/wtu_text_bgry_medicine_item"
            app:layout_constraintTop_toBottomOf="@+id/wtu_text_bgry_medicine_item"
            app:layout_constraintEnd_toEndOf="@+id/wtu_text_bgry_medicine_item"
            android:text="@string/how_to_use"
            android:textColor="@color/primary__"
            android:textSize="@dimen/_14ssp"
            android:transitionName="medicine_description"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/htu_bgry_medicine_item"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/htu_bgry_medicine_item"
            app:layout_constraintStart_toStartOf="@+id/htu_bgry_medicine_item"
            app:layout_constraintEnd_toEndOf="@+id/htu_bgry_medicine_item"
            android:id="@+id/htu_text_bgry_medicine_item"
            android:transitionName="medicine_description"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipisicing_elit_inventore_reprehenderit_dicta_quam_eos_corrupti_sapiente_quidem_doloremque_ipsa_eius_similique_a_sed_voluptatibus_rem_numquam_aperiam_distinctio_laborum_quas_molestiae_lorem_ipsum_dolor_sit_amet_consectetur_adipisicing_elit_inventore_reprehenderit_dicta_quam_eos_corrupti_sapiente_quidem_doloremque"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>