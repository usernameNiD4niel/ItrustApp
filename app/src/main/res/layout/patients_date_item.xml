<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/light_border"
    android:backgroundTint="@color/background__"
    android:elevation="@dimen/_3sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/arrow_right"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/company_sub_logo"
        android:id="@+id/check_icon_patients_date_item"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_02_26_2023"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/check_icon_patients_date_item"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/date_patients_date_item"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_02_26_2023"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/date_patients_date_item"
        app:layout_constraintStart_toStartOf="@+id/date_patients_date_item"
        app:layout_constraintEnd_toEndOf="@+id/date_patients_date_item"
        android:id="@+id/time_patients_date_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>