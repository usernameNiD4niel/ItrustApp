<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background__"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/smallProfileImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        app:civ_border_width="@dimen/_1sdp"
        app:civ_border_color="@color/main_color"
        android:src="@drawable/user_avatar_1"/>

    <TextView
        android:id="@+id/textMessageChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@+id/smallProfileImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/message_background_chat"
        android:maxWidth="@dimen/_180sdp"
        android:padding="@dimen/_8sdp"
        android:text="@string/daniel_rey"
        android:textColor="@color/background__" />

</androidx.constraintlayout.widget.ConstraintLayout>