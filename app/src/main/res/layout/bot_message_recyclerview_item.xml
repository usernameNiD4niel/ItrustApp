<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:id="@+id/chatBotMainParentOfBot"
    android:padding="@dimen/_7sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/botIcon"
        android:layout_width="@dimen/_30sdp"
        android:contentDescription="@string/bot"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/starla"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black_100"
        android:layout_marginStart="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/botMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:maxWidth="@dimen/_190sdp"
            android:padding="@dimen/_7sdp"
            android:text="@string/daniel_rey"
            android:textColor="#fff"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
